{
	"compilerOptions": {
		"target": "esnext",
		"module": "es6",
		"moduleResolution": "node16",
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"sourceMap": true,
		"pretty": true,
		"newLine": "lf",
		"outDir": "./dist"
	},
	"include": ["src/**/*.ts"],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}
